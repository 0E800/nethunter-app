<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading"
        android:id="@+id/switch1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:textColor="@color/clearTitle"
        android:textStyle="bold"

        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="@dimen/base_listItem_LR"
        android:paddingRight="@dimen/base_listItem_LR"
        android:paddingTop="@dimen/base_listItem_TB"
        android:paddingBottom="@dimen/base_listItem_TB"
        android:textOn="UP"
        android:textOff="DOWN" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Loading service state"
        android:id="@+id/switchHolder"
        android:paddingLeft="@dimen/base_listItem_LR"
        android:paddingRight="@dimen/base_listItem_LR"

        android:paddingBottom="@dimen/base_listItem_TB"
        android:layout_below="@+id/switch1"
        android:layout_alignParentStart="true" />
</RelativeLayout>
