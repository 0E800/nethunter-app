<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/test_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/offsec_logo_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:text="@string/hometitle"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/buildinfo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:paddingTop="4dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/buildinfo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:gravity="center"
            android:padding="16sp"
            android:paddingTop="16sp"
            android:text="@string/nethunter_description" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="16sp"
            android:columnCount="2"
            android:rowCount="2">

            <TextView
                android:id="@+id/current_interfaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="@string/nethunter_current_interfaces"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:inputType="none"
                android:paddingTop="8sp"
                android:textSize="12sp"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/external_address"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="end"
                android:layout_row="0"
                android:text="@string/nethunter_external_ip"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="end"
                android:layout_row="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editText2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:inputType="none"
                    android:paddingTop="8sp"
                    android:singleLine="true"
                    android:text="@string/unknown"
                    android:textSize="12sp"
                    android:typeface="monospace" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="121dp"
                    android:layout_height="38dp"
                    android:text="@string/get_external_ip"
                    android:textSize="11dp" />
            </LinearLayout>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16sp"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_weight="0.08">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="@string/nethunter_hid_detect"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:inputType="none"
                android:paddingTop="8sp"
                android:textSize="12sp"
                android:typeface="monospace" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_gravity="end"
                android:layout_row="1"
                android:orientation="vertical" >

            </LinearLayout>
        </GridLayout>

        <TextView
            android:id="@+id/licenseInfo"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom|center"
            android:paddingBottom="8dp"
            android:text="@string/licenseInfo"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom|center"
            android:text="@string/nhwarning"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/highlighted_text_material_dark"
            android:textSize="10dp" />
    </LinearLayout>
</ScrollView>

