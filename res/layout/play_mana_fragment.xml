<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data class=".PlayManaBinding">

        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.offsec.nethunter.PlayManaViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/ssid_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/heading_background"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="SSIDs Probed"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/ssh_run"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_marginRight="16dp"
            android:text="Start Mana" />

        <Button
            android:id="@+id/ssh_stop"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="false"
            android:layout_toStartOf="@+id/ssh_run"
            android:text="Stop Mana" />

        <TextView
            android:id="@+id/connected_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ssid_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="52dp"
            android:layout_marginTop="8dp"
            android:text="Clients:"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/num_connected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ssid_label"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:text="@{viewModel.numConnected}"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <LinearLayout
            android:id="@+id/mana_layout_left"
            android:layout_width="match_parent"
            android:layout_below="@+id/ssid_label"
            android:orientation="vertical"
            android:layout_height="240dp">

        </LinearLayout>

        <TextView
            android:id="@+id/sites_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mana_layout_left"
            android:background="@color/heading_background"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="Connected sites"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <LinearLayout
            android:id="@+id/ll_cert"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_below="@+id/sites_label"
            android:orientation="vertical">

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/status_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/heading_background"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="@{viewModel.statusText}"
                android:layout_gravity="center_vertical"/>
            <ProgressBar
                android:id="@+id/progress_bar"
                android:visibility="@{viewModel.initialized &amp;&amp; !viewModel.started ? View.VISIBLE : View.INVISIBLE}"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:indeterminate="true"
                android:layout_gravity="top"/>
        </FrameLayout>
    </RelativeLayout>
</layout>